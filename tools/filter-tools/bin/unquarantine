#! /bin/bash

PATH=${PATH}:/opt/clamav/bin
CLAM=clamdscan

FROM=
UCONF="$(dirname $0)/../etc/q-tools.conf"
[ -f $UCONF ] && source $UCONF

if [ -z "$FROM" ]
then
  FROM=postmaster
  DOMAIN=$(grep domain /etc/resolv.conf | awk '{print $2}')
  [ -n "$DOMAIN" ] && FROM="${FROM}@${DOMAIN}"
fi

echo "from = $FROM"

#USER=root+123456789
#DOMAIN=domain.com
#FROM="$USER@$DOMAIN"
RCPT=
MSG=


VERBOSE=
VCHECK=1
SCHECK="-Am"

usage()
{
  echo "Usage: $0 [options]"
  cat <<EOF
    Options :
      -h           ce message
      -m id        message ID
      -f from      from
      -t rcpt      destinataire
      -n           pas de scan antivirus local
      -c           active ze-filter anti-spam
      -v           verbose

EOF
}

set -- `getopt f:t:m:hvnc $*`
if [ $? != 0 ]
then
  usage
  exit 2
fi

for i in $*
do
  case $i in
    -h)
       usage
       exit 0
       ;;
    -f)
       FROM=$2
       shift 2
       ;;
    -t)
       RCPT=$2
       shift 2
       ;;
    -m)
       MSG=$2
       shift 2
       ;;
    -v)
       VERBOSE=-v
       shift
       ;;
    -n)
       VCHECK=0
       shift
       ;;
    -c)
       SCHECK="-Ac"
       shift
       ;;
    --)
       shift
       break
       ;;
  esac
done

if [ -z "$MSG" ]
then
  usage
  cat <<EOF
    MESSAGE ID option (option -m) is mandatory

EOF
  exit 1
fi

cd /var/spool/ze-filter

FILE=
if [ -f $MSG ] 
then
  FILE=$MSG
elif [ -f $MSG.xfile ]
then
  FILE=$MSG.xfile
elif [ -f $MSG.virus ]
then
  FILE=$MSG.virus
elif [ -f $MSG.spam ]
then
  FILE=$MSG.spam
elif [ -f $MSG.archive ]
then
  FILE=$MSG.archive
else
  cat <<EOF

    * Message ID $MSG non trouve

EOF
  exit 1
fi

if [ "$VCHECK" = "1" -a -x $CLAM -a -f $FILE ]
then
  $CLAM $FILE > /dev/null
  X=$?
  if [ "$X" = "1" ]
  then
    cat <<EOF

    Virus trouve !!! Si vous souhaitez forcer la sortie de
    la quarantaine, utilisez l option -n

EOF
    $CLAM $FILE
    exit 1
  fi
fi

if [ -z "$FROM" ]
then
  DOMAIN=$(grep domain /etc/resolv.conf | awk '{print $2}')
  FROM="postmaster@$DOMAIN"
fi

LL=`ls -l $FILE`

echo "  * FROM   : $FROM"
echo "  * RCPT   : $RCPT"
echo "  * MSG    : $MSG"
echo "  * FILE   : $FILE"
echo "           : $LL"

if [ -z "$FROM" -o -z "$RCPT" -o -z "$FILE" ]
then
  usage
  exit 1
fi

if [ "$RCPT" = "ALL" -o "$RCPT" = "all" ]
then
  RCPT="-t"
fi

sed -e 's/^\.$/-/' $FILE > /tmp/$FILE.out

/usr/sbin/sendmail $SCHECK -bm $VERBOSE -f $FROM  $RCPT < /tmp/$FILE.out

