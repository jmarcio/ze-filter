#! /usr/bin/perl -w
#
#
use strict;
use Getopt::Long;
use Pod::Usage;
use POSIX;
use Net::SMTP;

use FindBin qw($Bin);
use lib "$Bin/../lib";

# ------------------------------------------------
#
#
my $appl = `basename $0`;
chomp $appl;

my $usage   = 0;
my $debug   = 0;
my $verbose = 0;
my $Op      = "";

my $mta     = "localhost";
my $port    = 25;
my $helo    = "localhost.localdomain";
my $from    = "jose\@ensmp.fr";
my $to      = "devnull\@ensmp.fr";
my $msg     = "msgfr";
my $subject = "Test message (smtp-source by Joe)";

my $ok = GetOptions(
  'help'   => \$usage,
  'h'      => \$usage,
  'd'      => \$debug,
  'debug'  => \$debug,
  'v'      => \$verbose,
  'op=s'   => \$Op,
  'mta=s'  => \$mta,
  'port=i' => \$port,
  'helo=s' => \$helo,
  'from=s' => \$from,
  'to=s'   => \$to,
  'msg=s'  => \$msg
);

if ($usage || $Op =~ /help/i) {
  usage();
  exit 0;
}

my %StaticData = ();
GetStaticData(\%StaticData);

my @body = qw();
if ($Op =~ /^msg$/i) {
  foreach (@body) {
    print $_, "\n";
  }
  exit 0;
}

if ($Op =~ /^test$/i) {
  @body = @{$StaticData{msg}{_data_}};
  sendMail($mta, $port, $helo, $from, $to, @body);

  exit 0;
}

if ($Op =~ /^send$/i) {
  if (exists $StaticData{$msg}) {
    @body = @{$StaticData{$msg}{_data_}};
    my $now = clock2date(time());
    foreach (@body) {
      s/__DATE__/$now/;
      s/__RCPT__/$to/;
      s/__FROM__/$from/;
      s/__SUBJECT__/$subject/;
    }
  }
  sendMail($mta, $port, $helo, $from, $to, @body);

  exit 0;
}

exit 0;

# ------------------------------------------------
#
#
sub sendMail {
  my ($mta, $port, $helo, $from, $to, @body) = @_;
  my $r;

  my $smtp = Net::SMTP->new(
    $mta,
    Hello   => $helo,
    Timeout => 60,
    Debug   => $debug
  );

  unless ($smtp) {
    goto end;
  }
  $r = $smtp->mail($from);
  unless ($r) {
    goto end;
  }
  $r = $smtp->to("<$to>");
  unless ($r) {
    goto end;
  }
  if ($#body >= 0) {
    chomp @body;
    $r = $smtp->data();
    foreach my $s (@body) {
      $r = $smtp->datasend("$s\r\n");
    }
    $r = $smtp->dataend();
  }
  $smtp->quit();

end:
  return 1;
}

# ------------------------------------------------
#
#
sub clock2date {
  my ($c, undef) = @_;
  return 0 if !defined($c);

  my @WDay  = qw(Mon Tue Wed Thu Fri Sat Sun);
  my @Month = qw(Jan Feb Mar Apr May Jun Jul Aug Sep Oct Nov Dec);

  my ($sec, $min, $hour, $mday, $mon, $year, $wday, $yday) = localtime($c);

  # Fri, 2 May 2014 20:43:46 +0200
  return sprintf "%s, %d %s %d %02d:%02d:%02d +0200", $WDay[$wday], $mday,
    $Month[$mon],
    $year + 1900, $hour, $min, $sec;

}

# ------------------------------------------------
#
#
sub usage {
  print <<EOT;
  Usage : $appl [OPTIONS]
    --help
    -h      : Ce message
EOT
}

# ------------------------------------------------
#
#
sub GetStaticData {
  my ($h, undef) = @_;
  my @DATA = <DATA>;
  my @SOPT = qw();
  chomp @DATA;
  my $in  = 0;
  my $key = "";
  foreach my $s (@DATA) {
    if ($key eq "") {
      if ($s =~ /==\s+BEGIN\s+(\S+)\s+==/) {
        $key = $1;
      }
      next;
    }
    if ($s =~ /==\s+END\s+(\S*\s+)?==/) {
      $key = "";
      next;
    }
    push @{$h->{$key}{_data_}}, $s;
    next if $s =~ /^\s*$/;
    my ($a, $b) = split " ", $s, 2;
    next unless defined $a && $a ne "";
    $b = "" unless defined $b;
    $h->{$key}{$a} = $b;
  }
}

__DATA__

